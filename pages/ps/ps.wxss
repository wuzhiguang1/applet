
/* bander */

.bander{
  width: 100%;
}
.bander .pic{
  width: 100%;
  display: block;
}
/* psBox */
.psBox{
  padding: 90rpx 0 50rpx;
  background: #1A3673;
}
.psBox:nth-child(2n){
  background: #FFFFFF;
}
.psBox .psBoxTit{
  position: relative;
  width: 490rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #ED3D02;
  border-radius: 70rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 40rpx;
  margin: 0 auto;
  margin-bottom: 50rpx;
}
.psBox .psBoxTit::before{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: block;
  content: "";
  border: 2px dotted #ED3D02;
  box-sizing: border-box;
  border-radius: 70rpx;
  transform: scale(1.06,1.4);
}
.psBoxCon .pic{
  width: 100%;
}
.psBoxCon .text{
padding: 70rpx 50rpx;
box-sizing: border-box;
display: flex;
flex-wrap: wrap;
}
.psBoxCon .text view{
  width: 50%;
  font-size: 30rpx;
  position: relative;
}
.psBoxCon .text view::before{
  content: '';
  display: block;
  width: 10rpx;
  height: 10rpx;
  background: #000;
  border-radius: 50%;
  position: absolute;
  left: -20rpx;
  top: 16rpx;
}
.psBox:nth-child(2n-1) .text view{
  color: #fff;
}
.psBox:nth-child(2n-1) .text view::before{
  background: #fff;
}
.psBoxConOne {
display: flex;
flex-wrap: wrap;
justify-content: center;
}
.psBoxConOne .item{
  padding: 20rpx;
  text-align: center;
  color: #fff;

}
.psBoxConOne .item image{
  width: 180rpx;
  height: 180rpx;
}
.psBoxConOne .item .txt{
  text-transform: uppercase;
  font-size: 28rpx;
  padding-top: 20rpx;
}






